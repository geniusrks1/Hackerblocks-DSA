import java.util.*;
public class Main {
    public static void main (String args[]) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
	int arr[]=new int[n];
	for(int i=0;i<n;i++)
	arr[i]=s.nextInt();
int count=0;
int max=0;
for(int i=0;i<n;i++){
	if(arr[i]==1){
		count++;
    if(count>max)
	max=count;
	}
	else{
		count=0;
	}

}

System.out.print(max);


    }
}
