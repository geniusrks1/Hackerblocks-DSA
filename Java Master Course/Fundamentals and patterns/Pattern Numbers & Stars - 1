import java.util.*;
public class Main {
    public static void main(String args[]) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		for(int i=0;i<n;i++){
			for(int num=0;num<n-i;num++){
				System.out.print(num+1+" ");
			}

			for(int star1=0;star1<2*i-1;star1++){
				System.out.print('*'+" ");
			}
			
			System.out.println();

		}

    }
}
