import java.util.*;
public class Main {
    public static void main(String args[]) {
Scanner s=new Scanner(System.in);
int n=s.nextInt();
for(int i=0;i<n;i++){
	for(int sp=0;sp<n-i-1;sp++)
	System.out.print("    ");

	for(int num1=0;num1<=i;num1++)
	System.out.print(i+1+num1+"   ");

	for(int num2=0;num2<i;num2++)
	System.out.print(2*i-num2+"   ");
	System.out.println();
}
    }
}
